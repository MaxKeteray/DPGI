<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер валют" Height="450" Width="480"
        Background="#E8EDF1"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Direction="320"
                          Color="Gray"
                          Opacity="0.4"/>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="15" Margin="20"
                Effect="{DynamicResource DropShadowEffect}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image Source="C:\Users\keteray\Desktop\DPGI\laba3\laba3\Images\money.png" Height="60" Margin="0,0,0,10"/>
                    <TextBlock Text="Конвертер валют" FontSize="24" FontWeight="Bold" Foreground="#3F3F3F"/>
                </StackPanel>

 
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBox x:Name="InputAmountTextBox" Width="150" FontSize="16" Padding="6" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CurrencyComboBox" Width="120" FontSize="16" Padding="4">
                        <ComboBoxItem Content="🇺🇸 USD"/>
                        <ComboBoxItem Content="🇪🇺 EUR"/>
                        <ComboBoxItem Content="🇵🇱 PLN"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="⇨ В гривні" Width="120" Margin="5" Padding="6"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            Cursor="Hand" BorderThickness="0"
                            MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                            Click="ConvertToUAH_Click"/>
                    <Button Content="⇦ З гривні" Width="120" Margin="5" Padding="6"
                            Background="#2196F3" Foreground="White" FontWeight="Bold"
                            Cursor="Hand" BorderThickness="0"
                            MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                            Click="ConvertFromUAH_Click"/>
                </StackPanel>


                <Border Grid.Row="3" Background="#f9f9f9" CornerRadius="10" Padding="15" Margin="0,20,0,0"
                        BorderBrush="#D3D3D3" BorderThickness="1">
                    <TextBlock x:Name="ResultTextBlock" FontSize="16" FontWeight="SemiBold"
                               Foreground="#333" TextAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
